<% provide(:title, "Home") %>

<!-- Flashes -->
<% if flash.any? %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="alerts">
      <% flash.each do |key, value| %>
      <div class="alert alert-danger alert-dismissible <%= key %>" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= value %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>


<!-- Page Header -->
<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h2 class="pull-left">Kahu Replica Manager</h2>
      <div class="header-controls pull-right">
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>


<!-- Map and Hosts List -->
<div class="row">

  <!-- Map -->
  <div class="col-md-7">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Geographic Replication</h4>
      </div>
      <div class="panel-body">
        <!-- Map of Replicas -->
        <div id="map" style="width: 100%; min-height: 400px;"></div>
      </div>
      <div class="panel-footer">
        <small class="text-muted">GeoIP provided by MaxMind</small>
      </div>
    </div>
  </div>

  <!-- Hosts -->
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Hosts and Replicas</h4>
      </div>
      <table class="table">
        <% @machines.each do |m| %>
          <tr>
            <td>
              <!-- Active -->
              <span class="text-<%= m.active ? :success : :danger %>" title="<%= m.active ? "Active" : "Inactive" %>">
                <%= icon(:circle) %>
              </span>
              <!-- Health -->
              <span class="health-<%= m.health %>" title="Health: <%= m.health.capitalize %>">
                <%= icon(:circle) %>
              </span>
            </td>
            <td><%= m.hostname %></td>
            <td><%= m.addressed_by %></td>
            <td>
              <span class="label label-<%= m.replicas.count > 0 ? :success : :default %>">
                <%= m.replicas.count %>
              </span>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="panel-footer">
        <small class="text-muted pull-right">
          <%= link_to "Manage Hosts and Replicas", machines_path %>
        </small>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>

</div>

<!-- Google Maps Script -->
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({
    provider: {
      disableDefaultUI: false,
    },
    internal: {id: 'map'}
  }, function(){
      markers = handler.addMarkers(<%=raw @maphash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      // handler.getMap().setZoom(10);
  }
  );
</script>
